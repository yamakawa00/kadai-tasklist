<!--#フォーム入力画面-->
<%= form_for(@task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'task_name' %>
  <%= f.text_field :content %>
  </br>

  <%= f.label :status, 'task_status' %>
  <%= f.text_field :status %>

  <%= f.submit '投稿' %>
<% end %>